
<h1>Listing events</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Starting time</th>
      <th>Ending time</th>
      <th>Slot</th>
      <th>Attending user count</th>
      <th>Address</th>
      <th>Location</th>
      <th>Description</th>
      <th>Is recurring</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.starting_time %></td>
        <td><%= event.ending_time %></td>
        <td><%= event.slot %></td>
        <td><%= event.attending_user_count %></td>
        <td><%= event.address %></td>
        <td><%= event.location_id %></td>
        <td><%= event.description %></td>
        <td><%= event.is_recurring %></td>
        <td><%= event.category_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
