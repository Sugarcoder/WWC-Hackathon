<%= form_for(@instruction, html: { class: ['form-horizontal'], role: 'form' } ) do |f| %>
  <% if @instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instruction.errors.count, "error") %> prohibited this instruction from being saved:</h2>

      <ul>
      <% @instruction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-4">
      <%= f.label :description %><br>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4">
      <label> Upload instruction pdf </label>
      <%= f.file_field(:file, accept: 'application/pdf') %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
