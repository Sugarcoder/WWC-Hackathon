<h2>Forgot your password?</h2>
<br>

<div class="row">
  <div class="col-sm-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: 'reset-password', role: 'form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class='form-group'> <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %> </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
